---
interface Package {
  tier: string;
  name: string;
  price: string;
  description: string;
  features: string[];
  highlight: boolean;
}

interface Props {
  serviceName: string;
  packages: Package[];
}

const { serviceName, packages } = Astro.props;
---
<section class="py-12 border-t border-neutral-100 first:border-t-0">
  <div class="text-center mb-10">
    <h2 class="text-2xl md:text-3xl font-bold font-display text-primary-950">{serviceName}</h2>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {packages.map((pkg) => (
      <div class={`p-8 rounded-2xl border ${pkg.highlight ? 'border-primary-500 shadow-lg scale-105' : 'border-neutral-200 shadow-sm'} bg-white relative`}>
        {pkg.highlight && (
          <span class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-primary-500 text-white text-xs font-bold py-1 px-3 rounded-full">
            Recommended
          </span>
        )}
        <h3 class="text-xl font-bold text-primary-950">{pkg.name}</h3>
        <p class="mt-2 text-neutral-600 text-sm">{pkg.description}</p>
        <div class="mt-6">
          <span class="text-3xl font-bold text-primary-950">{pkg.price}</span>
        </div>
        <ul class="mt-8 space-y-4">
          {pkg.features.map(feature => (
            <li class="flex items-start text-sm text-neutral-800">
              <svg class="w-5 h-5 text-primary-500 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
              {feature}
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
