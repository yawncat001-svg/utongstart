---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---
<section class="bg-primary-950 text-white py-20 md:py-24">
  <div class="max-w-content mx-auto px-4 text-center">
    <h1 class="text-3xl md:text-5xl font-bold">{title}</h1>
    <p class="mt-4 text-lg md:text-xl text-neutral-300 max-w-3xl mx-auto">{subtitle}</p>
  </div>
</section>
